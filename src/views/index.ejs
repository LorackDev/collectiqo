  <script src="/js/submits/auth/submitLoginForm.js"></script>


</head>

<body>

<header>
  <%- include('./templates/header.html') %>
</header>

<main>
  <div class="centerPage">
    <div class="CollectiqoText">
    <h1><span class="collectiqo-text">Collectiqo.</span>
      All your collections.
      Perfectly organized.</h1>
    </div>
    <div class="centerRow">
    <div class="login-panel">
      <div class="switch-container">
      <div class="form-container sign-up-container">
        <form id="signup-form">
          <h1>Create Account</h1>
            <input type="text" id="usernameSU" placeholder="Username" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="passwordSU" placeholder="Password" required>
            <button type="submit">Sign Up</button>
          </form>
        </form>
      </div>
      <div class="form-container sign-in-container">
        <form id="loginForm">
          <h1>Sign in</h1>
          <br>
            <input type="text" id="usernameLI" placeholder="Username or Email" required>
            <input type="password" id="passwordLI" placeholder="Password" required>
            <br>
            <button type="submit">Login</button>
        </form>
      </div>
      <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1>Welcome Back!</h1>
            <p>Already have an account? Switch up below!</p>
            <button class="ghost" id="designSignIn">Login</button>
          </div>
          <div class="overlay-panel overlay-right">
            <h1>New here?</h1>
            <p>Enter your personal details and start collecting!</p>
            <button class="ghost" id="designSignUp">Sign Up</button>
          </div>
        </div>
      </div>
    </div>


